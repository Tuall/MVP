<h1 class="tc">Capture</h1>

<%= form_for @changeset, Routes.capture_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :text %>
  <%= textarea f, :text %>
  <%= error_tag f, :text %>

  <div>
    <%= submit "Categorise" %>
  </div>
<% end %>
